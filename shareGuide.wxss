.btn_default {
    background: transparent;
    padding: 0;
    margin: 0;
    border: 0;
    border-radius: 0;
    text-align: left;
    line-height: normal;
    overflow: visible;
}

.btn_default::after {
    border: none;
}

.close-btn {
    width: 60rpx;
    height: 60rpx;
    display: block;
    position: absolute;
    right: 0;
    top: 0;
    transform: translate(50%,-50%);
}

.share-btn {
    width: 488rpx;
    height: 92rpx;
    background: rgba(36,184,36,1);
    box-shadow: 0 2rpx 7rpx 0 rgba(36,184,36,1),0 1rpx 10rpx 0 rgba(36,184,36,0.5),0 -1rpx 10rpx 0 rgba(36,184,36,0.5);
    border-radius: 46rpx;
    margin: 24rpx auto 53rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    line-height: 1;
    font-size: 42rpx;
    font-family: Source Han Sans CN;
    font-weight: bold;
    color: rgba(255,255,255,1);
}

.title {
    font-size: 58rpx;
    font-family: Microsoft YaHei;
    font-weight: bold;
    color: rgba(72,53,38,1);
    margin: 24rpx 0 31rpx;
    line-height: 1;
    text-align: center;
}

.content-item {
    width: 631rpx;
    height: 320rpx;
    display: block;
    margin: auto;
    position: relative;
}

.content-item:first-child {
    margin-bottom: 20rpx;
}

.item-bg {
    width: 100%;
    height: 100%;
    display: block;
}

.item-container {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
}

.icon {
    display: flex;
    justify-content: center;
    align-items: flex-end;
    margin-bottom: 22rpx;
}

.icon-heart {
    width: 164rpx;
    height: 132rpx;
    display: block;
    margin-top: 54rpx;
}

.icon-tip {
    width: 163rpx;
    height: 159rpx;
    display: block;
    margin-top: 31rpx;
}

.icon-num {
    font-size: 58rpx;
    font-family: Microsoft YaHei;
    font-weight: bold;
    color: rgba(255,229,2,1);
    line-height: 1;
    position: relative;
    z-index: 2;
    margin-left: 8rpx;
}

.icon-num:after {
    content: attr(data-text);
    position: absolute;
    left: 0;
    top: 0;
    -webkit-text-stroke: 8rpx rgba(72,53,38,1);
    z-index: -1;
}

.desc1 {
    font-size: 36rpx;
    font-family: Microsoft YaHei;
    font-weight: 400;
    color: rgba(87,76,68,1);
    text-align: center;
}

.red {
    font-size: 36rpx;
    font-family: Microsoft YaHei;
    font-weight: 400;
    color: rgba(234,17,0,1);
}

.desc2 {
    font-size: 30rpx;
    font-family: Microsoft YaHei;
    font-weight: bold;
    color: rgba(134,126,120,1);
    text-align: center;
}

.wx-icon {
    width: 45rpx;
    height: 45rpx;
    display: block;
    margin-right: 8rpx;
}

.start-text-move {
    animation: startText 1.5s infinite;
}

@-webkit-keyframes startText {
    0% {
        transform: scale(1);
    }

    40% {
        transform: scale(1.1);
    }

    80% {
        transform: scale(1);
    }

    100% {
        transform: scale(1);
    }
}

@keyframes startText {
    0% {
        transform: scale(1);
    }

    40% {
        transform: scale(1.1);
    }

    80% {
        transform: scale(1);
    }

    100% {
        transform: scale(1);
    }
}

.popup-title {
    position: relative;
    width: 568rpx;
    height: 116rpx;
    margin: 26rpx auto;
}

.popup-title-bg {
    width: 100%;
    height: 100%;
    display: block;
}

.popup-title-text {
    width: 408rpx;
    height: 56rpx;
    display: block;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
}