.new-more-game {
    width: 109rpx;
    background: #676676;
    border-radius: 6rpx;
    border: 3rpx solid #28272D;
    box-sizing: border-box;
    animation: moreGameIcon 3s infinite;
}

@-webkit-keyframes moreGameIcon {
    0% {
        transform: rotate(0);
    }

    10% {
        transform: rotate(10deg);
    }

    20% {
        transform: rotate(-10deg);
    }

    30% {
        transform: rotate(10deg);
    }

    40% {
        transform: rotate(-10deg);
    }

    50% {
        transform: rotate(0);
    }

    100% {
        transform: rotate(0);
    }
}

@keyframes moreGameIcon {
    0% {
        transform: rotate(0);
    }

    10% {
        transform: rotate(10deg);
    }

    20% {
        transform: rotate(-10deg);
    }

    30% {
        transform: rotate(10deg);
    }

    40% {
        transform: rotate(-10deg);
    }

    50% {
        transform: rotate(0);
    }

    100% {
        transform: rotate(0);
    }
}

.new-more-game-swiper {
    width: 86rpx;
    height: 86rpx;
    margin: 6rpx auto 0;
    border-radius: 6rpx;
    border: 2rpx solid #28272D;
    box-sizing: border-box;
}

.new-more-game-text-arrow {
    width: 100%;
    height: 34rpx;
    display: flex;
    align-items: center;
}

.new-more-game-text {
    font-size: 18rpx;
    line-height: 0;
    color: #fff;
    font-weight: bold;
    margin-right: 4rpx;
    margin-left: 6rpx;
    white-space: nowrap;
}

.new-more-game-arrow {
    width: 0;
    height: 0;
    border-left: 12rpx solid #fff;
    border-right: 12rpx solid transparent;
    border-top: 8rpx solid transparent;
    border-bottom: 8rpx solid transparent;
    box-sizing: border-box;
}