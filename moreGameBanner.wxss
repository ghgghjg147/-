.more-game-banner {
    width: 710rpx;
    height: 190rpx;
    background: rgba(253,244,226,1);
    border: 3rpx solid rgba(72,53,38,1);
    border-radius: 20rpx;
    display: flex;
    align-items: center;
}

.more-game-text {
    font-size: 28rpx;
    font-family: PingFang-SC-Heavy;
    font-weight: 800;
    color: rgba(72,53,38,1);
}

.more-game-container {
    width: 610rpx;
    height: 160rpx;
    background: rgba(227,213,186,1);
    border: 3rpx solid rgba(72,53,38,1);
    border-radius: 20rpx;
    display: flex;
    align-items: center;
    overflow-x: hidden;
}

.more-game-list1 {
    display: flex;
    align-items: center;
}

.more-game-list2 {
    display: flex;
    align-items: center;
}

.move {
    animation: moreGame 10s linear infinite;
}

@-webkit-keyframes moreGame {
    0% {
        transform: translateX(0);
    }

    100% {
        transform: translateX(-100%);
    }
}

@keyframes moreGame {
    0% {
        transform: translateX(0);
    }

    100% {
        transform: translateX(-100%);
    }
}

@keyframes moreGame {
    0% {
        transform: translateX(0);
    }

    100% {
        transform: translateX(-100%);
    }
}

.more-game-title {
    margin: 0 18rpx;
}

.more-game-item {
    margin: 0 20rpx;
}

.more-game-item.move {
    animation: startText 1.5s infinite;
}

@-webkit-keyframes startText {
    0% {
        transform: scale(1);
    }

    40% {
        transform: scale(1.1);
    }

    80% {
        transform: scale(1);
    }

    100% {
        transform: scale(1);
    }
}

@keyframes startText {
    0% {
        transform: scale(1);
    }

    40% {
        transform: scale(1.1);
    }

    80% {
        transform: scale(1);
    }

    100% {
        transform: scale(1);
    }
}

.item-img {
    width: 114rpx;
    height: 115rpx;
    border-radius: 10rpx;
    display: block;
    margin: 0 auto 6rpx;
}

.item-title {
    min-width: 110rpx;
    text-align: center;
    font-size: 20rpx;
    font-family: MicrosoftYaHei;
    font-weight: bold;
    color: rgba(72,53,38,1);
    white-space: nowrap;
    line-height: 1;
}

.more-game-list {
    width: 100%;
    display: flex;
    align-items: center;
}

.more-game-list.sort {
    justify-content: space-around;
}