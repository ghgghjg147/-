.guide {
    position: absolute;
    left: 0;
    top: 0;
    z-index: 9;
}

.guide-content-box {
    border-radius: 40rpx;
    background: rgba(248,185,88,1);
    border: 4rpx solid rgba(72,53,38,1);
    padding: 24rpx 40rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.guide-content-text {
    font-size: 40rpx;
    line-height: 52rpx;
    color: #fff;
    font-weight: bold;
    white-space: nowrap;
    display: inline-block;
    position: relative;
    z-index: 11;
}

.guide-content-text:after {
    content: attr(data-text);
    position: absolute;
    left: 0;
    top: 0;
    -webkit-text-stroke: 8rpx rgba(72,53,38,1);
    z-index: -1;
}

.guide-arrow-up {
    width: 48rpx;
    height: 44rpx;
    display: block;
    margin-bottom: 6rpx;
    margin-left: 0rpx;
    transform: rotate(180deg);
}

.guide-arrow-down {
    width: 48rpx;
    height: 44rpx;
    display: block;
    margin-top: 6rpx;
    margin-left: 0rpx;
}