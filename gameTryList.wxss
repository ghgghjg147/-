.invite-container {
    padding-bottom: 40rpx;
}

.invite-list {
    max-height: 44vh;
    overflow: scroll;
    -webkit-overflow-scrolling: touch;
}

.invite-item {
    width: 560rpx;
    height: 120rpx;
    margin: auto;
    position: relative;
    margin-bottom: 10rpx;
}

.invite-item-bg {
    width: 560rpx;
    height: 120rpx;
    display: block;
}

.invite-content {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    padding: 0 16rpx 0 29rpx;
}

.invite-left {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.invite-avatar {
    width: 88rpx;
    height: 88rpx;
    display: block;
    margin-right: 14rpx;
    background: rgba(249,233,220,1);
    border: 4rpx solid rgba(118,78,33,1);
    border-radius: 20rpx;
}

.default-avatar {
    width: 88rpx;
    height: 88rpx;
    display: block;
    margin-right: 14rpx;
}

.invite-icon-box {
    width: 88rpx;
    height: 88rpx;
    background: rgba(255,255,255,1);
    border-radius: 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 14rpx;
}

.invire-icon {
    width: 85rpx;
    height: 73rpx;
    display: block;
}

.invite-title {
    font-size: 32rpx;
    font-family: MicrosoftYaHei-Bold;
    font-weight: bold;
    color: rgba(72,53,38,1);
    line-height: 32rpx;
    margin-bottom: 15rpx;
}

.invite-reward {
    display: flex;
    align-items: center;
    font-size: 28rpx;
    line-height: 28rpx;
    font-family: MicrosoftYaHei;
    font-weight: bold;
    color: rgba(222,64,49,1);
}

.invite-reward-tip {
    font-size: 18rpx;
    font-family: MicrosoftYaHei-Bold;
    font-weight: bold;
    color: rgba(72,53,38,1);
    margin-right: 9rpx;
    white-space: nowrap;
    flex-wrap: 0;
}

.invite-icon {
    width: 33rpx;
    height: 33rpx;
    display: block;
}

.invite-btn-container {
    width: 164rpx;
    height: 76rpx;
    position: relative;
}

.invite-btn {
    width: 164rpx;
    height: 76rpx;
    display: block;
}

.list-popup-title {
    width: 372rpx;
    height: 63rpx;
    display: block;
    margin: 18rpx auto;
}

.btn_default {
    background: transparent;
    padding: 0;
    margin: 0;
    border: 0!important;
    border-radius: 0;
    text-align: left;
    line-height: normal;
    overflow: visible;
}

.btn_default::after {
    border: 0!important;
}

.btn-click {
    transform: scale(0.9,0.9)!important;
    transition: all 0.1s;
}

.popup-title {
    position: relative;
    width: 568rpx;
    height: 116rpx;
    margin: 26rpx auto;
}

.popup-title-bg {
    width: 100%;
    height: 100%;
    display: block;
}

.popup-title-text {
    width: 408rpx;
    height: 56rpx;
    display: block;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
}

.close-btn {
    width: 60rpx;
    height: 60rpx;
    display: block;
    position: absolute;
    right: 0;
    top: 0;
    transform: translate(50%,-50%);
}