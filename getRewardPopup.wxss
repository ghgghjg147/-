.days-login-reward {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    z-index: 99;
    background: rgba(27,26,25,0.75);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.days-login-reward .title {
    width: 640rpx;
    height: 165rpx;
}

.days-login-reward .reward-content {
    width: 652rpx;
    height: 652rpx;
    margin-top: 27rpx;
    position: relative;
    padding-top: 16rpx;
    box-sizing: border-box;
}

.days-login-reward .reward-img {
    width: 652rpx;
    height: 653rpx;
    animation: bgRotate 4s linear infinite;
}

@-webkit-keyframes bgRotate {
    0% {
        transform: rotate(0) scale(1.2);
    }

    100% {
        transform: rotate(360deg) scale(1.2);
    }
}

@keyframes bgRotate {
    0% {
        transform: rotate(0) scale(1.2);
    }

    100% {
        transform: rotate(360deg) scale(1.2);
    }
}

.days-login-reward .reward-bb {
    width: 180rpx;
    height: 192rpx;
    position: absolute;
    left: 236rpx;
    top: 218rpx;
}

.days-login-reward .reward-tip {
    font-size: 32rpx;
    line-height: 36rpx;
    color: #fff;
    font-weight: bold;
    text-align: center;
}

.days-login-reward .reward-btn-group {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: -80rpx;
}

.days-login-reward .reward-btn>image {
    width: 361rpx;
    height: 137rpx;
    margin: 0 15rpx;
}

.days-login-reward .reward-btn.move {
    animation: startText 1.5s infinite;
}

.days-login-reward .open-title {
    width: 605rpx;
    height: 233rpx;
    margin-top: -200rpx;
}

.days-login-reward .reward-btn-big {
    width: 340rpx;
    height: 138rpx;
    margin: -50rpx auto 0;
    position: relative;
    transform: translateY(-30%);
    z-index: 10;
}

.days-login-reward .reward-btn-big>image {
    width: 306rpx;
    height: 138rpx;
    display: block;
    margin: auto;
}

.reward-ts-btn1 {
    width: 360rpx!important;
    height: 138rpx!important;
}

.reward-ts-btn2 {
    font-size: 32rpx;
    line-height: 50rpx;
    color: #e2e2e2;
    border-bottom: 1px solid #e2e2e2;
    display: inline-block;
    margin-left: 50%;
    transform: translateX(-50%);
    margin-top: 6rpx;
}

.reward-icon-box {
    position: absolute;
    top: 238rpx;
    left: 50%;
    transform: translateX(-50%);
}

.reward-icon-box>.home {
    margin-top: -50rpx;
}

.reward-icon-box.animal-box {
    top: auto;
    bottom: 250rpx;
    transform: scale(1.3) translateX(-50%);
}

.reward-icon-box.role-box {
    margin-top: -10%;
}

.flex-box {
    align-items: flex-end;
    justify-content: center;
    display: flex;
}

.days-login-reward .reward-xx {
    width: 348rpx;
    height: 219rpx;
}

.days-login-reward .reward-ts {
    width: 238rpx;
    height: 238rpx;
}

.days-login-reward .reward-num {
    font-size: 68rpx;
    line-height: 1;
    color: #fff;
    font-weight: bold;
    -webkit-text-stroke: 4rpx #402e2b;
    position: absolute;
    left: 240rpx;
    bottom: 0;
}

.shop-reward-tip {
    width: 450rpx;
    font-size: 50rpx;
    font-family: MicrosoftYaHei-Bold;
    font-weight: bold;
    color: rgba(255,255,255,1);
    margin: 20rpx 0;
    text-align: center;
}

.shop-reward-tip2 {
    white-space: nowrap;
    width: 800rpx;
    font-size: 32rpx;
    font-family: MicrosoftYaHei-Bold;
    font-weight: bold;
    color: rgba(255,255,255,1);
    margin: 20rpx 0;
    text-align: center;
}