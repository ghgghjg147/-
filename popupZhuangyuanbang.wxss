.component-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 2;
}

.title-img {
    width: 330rpx;
    height: 74rpx;
    margin-top: 28rpx;
}

.medal-list {
    width: 576rpx;
    height: 640rpx;
    display: flex;
    flex-wrap: wrap;
    align-content: flex-start;
    margin-top: 22rpx;
    overflow-y: scroll;
}

.medal-item {
    margin-top: 50rpx;
}

.medal-item:nth-child(-n+3) {
    margin-top: 0;
}

.item {
    width: 192rpx;
    height: 150rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
}

.item>image {
    width: 140rpx;
    height: 150rpx;
    display: block;
}

.medal-name {
    font-size: 20rpx;
    line-height: 1;
    color: #E3E3E3;
    font-weight: bold;
    white-space: nowrap;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: 17rpx;
    z-index: 2;
}

.popup-title {
    position: relative;
    width: 568rpx;
    height: 116rpx;
    margin: 26rpx auto;
}

.popup-title-bg {
    width: 100%;
    height: 100%;
    display: block;
}

.popup-title-text {
    width: 408rpx;
    height: 56rpx;
    display: block;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
}

.close-btn {
    width: 60rpx;
    height: 60rpx;
    display: block;
    position: absolute;
    right: 0;
    top: 0;
    transform: translate(50%,-50%);
}